<!-- 카페 정보 ㄴㄴ -->
<!-- 카페에 등록된 글 -->
<h1><%= @cafe.title %></h1>
<p><%=@cafe.description%></p>


<ul class="list-group">
  <% @cafe.posts.each do |post| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
     <%= link_to "#{post.title}",post_path(post) %>
     <span class="badge badge-primary badge-pill"><%=post.comments.count%></span>
  </li>
  <% end %>
</ul>

<!-- 새글 등록버튼-->
<div class="text-center">
  <%= link_to "가입하기",join_cafe_path(@cafe),method:'post',class: "btn btn-primary"%>
  <%= link_to "새글쓰기", new_post_path(cafe_id: @cafe.id),class: "btn btn-info"%>
</div>